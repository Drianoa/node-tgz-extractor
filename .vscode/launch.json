    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "download local package-lock",
            "program": "${workspaceFolder}/bin/extract-tgz",
            "args": [
                "package-lock",
                "./package-lock.json",
                "--directory",
                "custom-tarballs"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download remote package-lock",
            "program": "${workspaceFolder}/bin/extract-tgz",
            "args": [
                "package-lock",
                "https://raw.githubusercontent.com/Meir017/node-tgz-extractor/master/package-lock.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jasmine Tests",
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
            "args": [
                "test/**/*spec.js",
                "--reporter=jasmine-console-reporter"
            ]
        }
    ]
}